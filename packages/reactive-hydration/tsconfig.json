{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Needed since we use JSX from our `reactive-hydration-react` jsx monkeypatch, and don't want a circular dependency.
    "jsx": "react",
    // "jsx": "react-jsx",
    // "jsxImportSource": "_react",
    "incremental": true,
    "declaration": true,
    "outDir": "dist"
  },
  "include": ["global.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
